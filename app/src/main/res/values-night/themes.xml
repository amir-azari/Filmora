<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Filmora" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorOnSurface">@color/md_theme_colorOnSurface</item>
        <item name="colorOnBackground">@color/md_theme_colorOnSurface</item>
        <item name="colorOutline">@color/md_theme_outline</item>
        <item name="android:fontFamily">@font/funnelsans_regular</item>

    </style>

    <style name="Theme.Filmora" parent="Base.Theme.Filmora" />

    <!-- Image -->
    <style name="ShapeAppearanceOverlay.App.Corner.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12mdp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/md_theme_colorOnSurface</item>
        <item name="cursorColor">@color/md_theme_colorOnSurface</item>
        <item name="android:textColorHint">@color/md_theme_colorOnSurface</item>

    </style>


</resources>